<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">Update Archive</h3>
    <br>
    <div class="col-md-6 mx-auto contain">
        <form action="update" method="post" encType="multipart/form-data">
            <br>
            <label class="form-label"><b>Enter archive details</b></label>
            <br><br>
            <div class="row">
                <label class="form-label">Archive ID </label>
                <input type="text" class="form-control" name="id" value="<%=details[0].id%>" required="true" readonly>
            </div>
            <br>
            <div class="row">
                <label class="form-label">Updated Name </label>
                <input type="text" class="form-control" name="name" value="<%=details[0].name%>">
            </div>
            <br>
            <div class="row">
                <label class="form-label">Updated Cloud Link</label>
                <input type="text" class="form-control" name="link" value="<%=details[0].link%>">
            </div>
            <br>
            <p>Enter details carefully.</p>
            <br>
            <button type="submit" class="btn btn-success">Update Link</button>
        </form>
        <br>
    </div>

    <!--    FORM-->
</div>

<%- include('partials/footer') %>

</body>

</html>

