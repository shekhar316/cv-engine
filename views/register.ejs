<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br><br>
    <h3 class="text-center">User Registration</h3>
    <br><br>
            <div class="col-md-10 mx-auto contain" style="display: none;" id="bulk">
                
                <h3 class="mx-auto text-center"><b>Add Students From CSV</b></h3>
                <hr><br>
                <form id="addNotice" method="post" action="/admin/addBulkStudents" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label"><b>Upload CSV File</b></label>
                        <input type="file" class="form-control" id="file" name="data">
                        <br>
                        <div class="form-text">Please provide a suitable CSV file. <br>  It may take a while to upload the student's data.</div>
                    </div>
                    <br>
                    <div>
                        <input type="submit" value="Add Students" onclick="return confirm('Are you sure you want to add these students?');" class="form-control btn btn-success">
                    </div>
                </form>
            </div>

        
    <div class="col-md-10 mx-auto contain" id="single">
        <button id="bullbtn" class="btn btn-warning" onclick='$("#bulk").show();$("#single").hide();'>Add Students From CSV</button>
        <br><br>
        <a href="https://forms.gle/BemKrewcutEE9Ess9" target="_blank"> Student Registration Form</a>
        <br>
        <a href="https://docs.google.com/spreadsheets/d/1JBn0Ig98iu_WDOJiid8V1DUo0zL2YRQZ-Ym3HKO3mJs/edit?usp=sharing" target="_blank"> CSV Demo File</a>
        <br><br>
        <form action="signup" method="post" encType="multipart/form-data">
            <label class="form-label"><b>Personal Details</b></label>
            <br><br>
            <div class="row">
                <div class="col">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" name="fname" placeholder="First name" required="true">
                </div>
                <div class="col">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="lname" placeholder="Last name" required="true">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">DOB</label>
                    <input type="date" class="form-control" name="dob" required="true">
                </div>
                <div class="col">
                    <div class="col">
                        <label class="form-label">Gender</label>
                        <input type="text" class="form-control" name="gender" placeholder="Male/Female/Other" required="true">
                    </div>
                </div>
            </div>
            <br><br>
            <label class="form-label"><b>Login Details</b></label><br><br>
            <div class="row">
                <div class="col">
                    <label class="form-label">Email </label>
                    <input type="email" class="form-control" name="email" placeholder="example@domain.com" required="true">
                </div>
                <div class="col">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required="true">
                </div>
            </div>
            <br><br>
            <label class="form-label"><b>Communication Details</b></label><br><br>
            <div class="row">

                <div class="col-6">
                    <label class="form-label">Phone Number (Without Country Code)</label>
                    <input type="text" pattern="^[0-9]{10}$" class="form-control" name="phone" placeholder="9412446090" required="true">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">Address </label>
                    <input type="text" class="form-control" name="address" placeholder="528, Clement Town, Near GEU" required="true">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">City </label>
                    <input type="text" class="form-control" name="city" placeholder="City" required="true">
                </div>
                <div class="col">
                    <label class="form-label">State </label>
                    <input type="text" class="form-control" name="state" placeholder="State" required="true">
                </div>
                <div class="col">
                    <label class="form-label">Pin Code </label>
                    <input type="number" class="form-control" name="pin" placeholder="Pin Code" required="true">
                </div>
            </div>
            <br><br>
            <label class="form-label"><b>Academic Details</b></label><br><br>
            <div class="row">
                <div class="col">
                    <label class="form-label">10th Marks in % </label>
                    <input type="number" class="form-control" name="xth"  required="true">
                </div>
                <div class="col">
                    <label class="form-label">12th Marks in % </label>
                    <input type="number" class="form-control" name="xii" placeholder="State" required="true">
                </div>
                <div class="col">
                    <label class="form-label">Curr Marks in % </label>
                    <input type="number" class="form-control" name="curr" placeholder="Pin Code" required="true">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label class="form-label">Resume Link</label>
                    <input type="url" class="form-control" name="resume" required="true">
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-success">Register</button>
        </form>
    </div>

<!--    FORM-->
</div>
<br>
<%- include('partials/footer') %>
<script>
    <% if(alert == "yes"){ %>
    Swal.fire({
        title: '<%=title%>',
        text: '<%=text%>',
        icon: '<%=icon%>',
        confirmButtonText: "Okay",
    })
    <%}%>
</script>

</body>

</html>

